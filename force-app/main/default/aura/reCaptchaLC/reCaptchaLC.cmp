<aura:component implements="forceCommunity:availableForAllPageTypes" access="global">
    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>
    
    <lightning:icon iconName="standard:case" alternativeText="Case" title="Case" /><span class="slds-text-heading_large slds-text-title_caps"><strong> Need Support? Open a New Case</strong></span>
    <lightning:input aura:id="expenseform" label="First Name"
                             name="firstName"
                             value="{!v.newExpense.FirstName}"
                             required="true"/>
    <br/>
    <lightning:input aura:id="expenseform" label="Last Name"
                             name="lastName"
                             value="{!v.newExpense.LastName}"
                             required="true"/>
    <br/>
    <lightning:input aura:id="expenseform" label="Second Last Name"
                             name="secondLastName"
                             value="{!v.newExpense.SecondLastName}"
                             required="true"/>
    <br/>
    <lightning:input type="email" name="email" required="true" value="" label="Email" /><br/>
    <lightning:input name="companyName" label="Company Name" /><br/>
    <lightning:input type="tel" label="Phone Number" name="phoneNumber" placeholder="9999876543"/><br/>
    <lightning:select name="caseType" label="Choose the type of Case you want to open" required="true">
        <option value="">choose one...</option>
        <option value="1">Question</option>
        <option value="2">Problem</option>
    </lightning:select>
    <div class="slds-m-vertical_medium slds-text-title_caps">
        <p class="slds-text-body_regular">Case Description Information</p>
    </div>
    <lightning:input aura:id="expenseform" label="Case Subject"
                             name="caseSubject"
                             value="{!v.newExpense.FirstName}"
                             required="true"/>
    <br/>
    <lightning:textarea name="caseDescription" required="true" value="" placeholder="Please, Describe your problem..." label="Case Description" maxlength="200" messageWhenTooLong="A maximum of 200 characters are allowed." messageWhenValueMissing="An empty case description cannot be submitted." /><br/>
    <iframe src="/donaciones/apex/ReCaptcha" height="100px" width="400px" style="border:0px"/>
    <br/> 
    <lightning:button aura:id="submitButton" label="Submit" onclick="{!c.doSubmit}" disabled="true"/>
</aura:component>	